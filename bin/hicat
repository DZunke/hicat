#!/usr/bin/env node
// vim:ft=javascript

var args = require('nopt')({
  lang: String,
  debug: Boolean,
  version: Boolean,
  languages: Boolean,
  help: Boolean,
  pager: Boolean
}, {
  h: '--help',
  v: '--version',
  l: '--lang',
  '--no-page': '--no-pager',
}, process.argv);

var read = require('../lib/read'),
    hicat = require('../index'),
    term = require('../lib/term');

/**
 * --debug: display detailed information.
 */

if (args.debug)
  process.env.HICAT_DEBUG = true;

/**
 * --no-pager: don't pass the output to `less`.
 */

if (args.pager === false)
  process.env.HICAT_NO_PAGER = true;

/**
 * --help: display help usage.
 */

if (args.help) {
  console.log([
      'Usage:',
      '    hicat [options] FILE', 
      '    ... | hicat [options]',
      '',
      'Options:',
      '    -h, --help         print usage information',
      '    -v, --version      show version info and exit',
      '    -l, --lang TYPE    use a given language',
      '        --languages    list available languages',
      '        --no-pager     disable the pager',
  ].join('\n'));
  process.exit(0);
}

if (args.version) {
  console.log(require('../package.json').version);
  process.exit(0);
}

/**
 * --languages: list languages.
 */

if (args.languages) {
  console.log(hicat.listLanguages().sort().join("\n"));
  process.exit(0);
}

/**
 * --list-colors: display the color scheme used.
 * Undocumented for now, but will be configurable soon.
 */

if (args['list-colors']) {
  Object.keys(hicat.colors).forEach(function (key) {
    var val = hicat.colors[key];
    console.log(key + "=" + val);
  });
  process.exit(0);
}

/*
 * Read files from stdin or from the given files.
 */

read.from(args.argv.remain, function (err, files) {
  if (err) {
    console.error(err.message);
    process.exit(8);
  }

  var str = '';

  for (var fname in files) {
    if (!files.hasOwnProperty(fname)) continue;
    var data = files[fname];
    var output = hicat(data, { filename: fname, lang: args.lang });
    str += output.ansi;
    if (process.env.HICAT_DEBUG) {
      str += "\nlanguage: " + output.language + "\n";
    }
  }

  if (process.env.HICAT_NO_PAGER || files['-'])
    process.stdout.write(str);
  else
    term.print(str);
});
